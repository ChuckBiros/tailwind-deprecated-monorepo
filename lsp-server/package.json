{
  "name": "@tailwind-deprecated/lsp-server",
  "version": "1.0.0",
  "description": "LSP server for detecting deprecated Tailwind CSS classes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tailwind-deprecated-lsp": "./dist/server/main.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "build:watch": "tsc -w",
    "bundle": "esbuild dist/server/main.js --bundle --platform=node --target=node18 --outfile=dist/bundle/server.js --external:typescript",
    "start": "node dist/server/main.js --stdio",
    "dev": "tsx src/server/main.ts --stdio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "tailwind",
    "css",
    "lsp",
    "deprecated",
    "linter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "^3.3.2",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
